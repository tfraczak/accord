<!DOCTYPE html>
<html>
  <head>
    <title>Accord</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <% if logged_in? %>
      <%= current_user_assignment %>
    <% end %>
    <script>
      window.logoUrl = "<%= image_url('splash_logo_white.png') %>";
      window.defaultAvatarUrl = "<%= image_url('default_avatar.png') %>";
      window.backgroundImg = "<%= image_url('vg_background.png') %>";
      window.placeholderImg = "<%= image_url('placeholder.png') %>";
      window.loginIcon = "<%= image_url('enter.svg') %>";
      window.linkedinLogo = "<%= image_url('linkedin_logo.png') %>";
      window.githubLogo = "<%= image_url('github_logo.png') %>";
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
